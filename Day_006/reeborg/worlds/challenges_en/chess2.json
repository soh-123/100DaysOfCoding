  "onload": [
     "var size, x, y, nb_rows;",
    "RUR.MAX_STEPS = 3000;",
    "size = 2* RUR.randint(3, 6);",
    "RUR.set_world_size(size, size);",
    "",
    "RUR.set_model('light blue');",
    "",
    "for (x=1; x<= size; x++) {",
    "    for (y=1; y<=size; y++) {",

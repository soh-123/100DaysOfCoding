    "RUR.give_object_to_robot(\"token\", size*size);",
    "",
    "",
    "nb_rows = size/2 - 1;",
    "for (x=1; x<=size; x++){",
    "    for(y=1; y<=nb_rows; y++) {",
    "        if ( (x+y)%2 == 0) {",
    "            RUR.add_object('token', x, y, {goal: true});",
    "        }",
    "    }",
    "}",
    "",
    "for (x=1; x<=size; x++){",
    "    for(y=nb_rows+3; y<=size; y++) {",

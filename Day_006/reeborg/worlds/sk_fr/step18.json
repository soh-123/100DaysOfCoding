  "onload": [
    "var height, width, nb_carrots, total_nb, x, y;",
    "",
    "width = RUR.randint(3, 8);",
    "height = RUR.randint(3, 8);",
    "total_nb = 0;",
    "RUR.set_world_size(width, height);",
    "RUR.fill_background(\"pale_grass\");",
    "",
    "for (x=1; x<=width; x++) {",
